            <data-flow notifier="astd-client" subscriber="astd-client-rtp"/>
            <data-flow notifier="chardash-astd-slot" subscriber="astd-client"/>
            <data-flow notifier="syuzhet-astd-slot" subscriber="astd-client"/>
        </application-->

    </applications>

</configuration>